<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    tools:context=".view.Activities.PlayPilganActivity.PlayPilganActivity">

    <TextView
        android:id="@+id/textView_play_pilgan_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_play_pilgan_outof" />

    <TextView
        android:id="@+id/textView_play_pilgan_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_play_pilgan_outof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_play_pilgan_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_play_pilgan_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Button"
        android:visibility="invisible"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_play_pilgan_question" />

    <Button
        android:id="@+id/btn_play_pilgan_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Button"
        android:visibility="invisible"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_play_pilgan_c"
        app:layout_constraintStart_toStartOf="@+id/btn_play_pilgan_c"
        app:layout_constraintTop_toBottomOf="@+id/btn_play_pilgan_c" />

    <Button
        android:id="@+id/btn_play_pilgan_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Button"
        android:visibility="invisible"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_play_pilgan_d"
        app:layout_constraintStart_toStartOf="@+id/btn_play_pilgan_d"
        app:layout_constraintTop_toBottomOf="@+id/btn_play_pilgan_d" />

    <Button
        android:id="@+id/btn_play_pilgan_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Button"
        android:visibility="invisible"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_play_pilgan_e"
        app:layout_constraintStart_toStartOf="@+id/btn_play_pilgan_e"
        app:layout_constraintTop_toBottomOf="@+id/btn_play_pilgan_e" />

    <Button
        android:id="@+id/btn_play_pilgan_e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Button"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_play_pilgan_a"
        app:layout_constraintStart_toStartOf="@+id/btn_play_pilgan_a"
        app:layout_constraintTop_toBottomOf="@+id/btn_play_pilgan_a"
        android:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>